
@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="container h-100">
    @if (ViewBag.Error != null)
    {
        <div class="container text-center">
            <span class="text-danger">@ViewBag.Error</span>
        </div>
    }
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/Images/logo.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control input_user" placeholder="E-mail Address" asp-for="EmailAddress">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center mt-3 login_container">
                        <button type="submit" name="button" class="btn login_btn" asp-action="Login" asp-controller="User" formmethod="post">Login</button>
                    </div>
                </form>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Don't have an account? <a asp-action="SignUp" asp-controller="User" class="ml-2">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

